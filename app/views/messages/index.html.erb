<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  
  <div class="panel-body">
      <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>  
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <div class="form-group">
    <label for="message-name" class="control-label col-md-2">名前</label>
    <div class="col-md-4">
      <%= f.text_field :name, :class => "form-control" %>    
    </div>
  </div>  
  内容:
  <br>
  <textarea class="form-control" rows="3"><%= f.text_area :body %></textarea>
    <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>